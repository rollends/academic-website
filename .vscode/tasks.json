{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Haskell Environment",
            "type": "shell",
            "command": "stack setup",
            "problemMatcher": []
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "stack build -j1",
            "dependsOn": [
                "Configure Haskell Environment"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Website",
            "type": "shell",
            "command": "stack exec site build",
            "dependsOn": [
                "Build Project"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Watch Server",
            "type": "shell",
            "command": "stack exec site watch",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "line": 1,
                            "column": 1,
                            "message": 1
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": { "regexp": "." },
                        "endsPattern": { "regexp": "." }
                    }
                }
            ]
        },
        {
            "label": "Stop Watch Server",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "Run Watch Server"
        }
    ]
}